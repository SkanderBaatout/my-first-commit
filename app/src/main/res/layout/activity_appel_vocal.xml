<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AppelVocal">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:inputType="number" android:id="@+id/number" android:hint="Phone Number" android:layout_margin="8dp"/>
   <ImageButton android:layout_width="56dp" android:layout_height="56dp"
      android:layout_gravity="center_horizontal"  android:background="@android:color/holo_green_light" android:id="@+id/call" android:src="@drawable/ic_call" />
</LinearLayout>